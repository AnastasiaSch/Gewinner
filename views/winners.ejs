      <% if (objects[i].subject == 'Peace') { %>
        <ul>
            <li><em>Gewinner:</em> <strong><%= objects[i].winner %></strong>. <em>Jahr der Verlehung:</em> <strong><%= objects[i].yr %></strong></li>
        </ul>
      <% } %>
    <% }); %>
  <% } %>

  <% if (subject.toLowerCase() == 'physics') { %>
    <% objects.forEach( (object, i) => { %>
      <% if (objects[i].subject == 'Physics') { %>
        <ul>
            <li><em>Gewinner:</em> <strong><%= objects[i].winner %></strong>. <em>Jahr der Verlehung:</em> <strong><%= objects[i].yr %></strong></li>
        </ul>
      <% } %>
    <% }); %>
  <% } %>

  <% if ((subject !== 'Chemistry') && (subject !== 'Literature') && (subject !== 'Medicine') && (subject !== 'Peace') && (subject !== 'Physics')) { %>
     <p>Error: Unbekanntes Fach!</p>
  <% } %>

</body>

</html>

