<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <title>winners</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" type="text/css" href="/style.css" 
        media="screen" />
</head>

<body>
  
  <h2>Fach: <%= subject %></h2> 

  <% if (subject.toLowerCase() == 'chemistry') { %>
    <% objects.forEach( (object, i) => { %>
      <% if (objects[i].subject == 'Chemistry') { %>
        <ul>
            <li><em>Gewinner:</em> <strong><%= objects[i].winner %></strong>. <em>Jahr der Verlehung:</em> <strong><%= objects[i].yr %></strong></li>
        </ul>
      <% } %>
    <% }); %>
  <% } %>       

  <% if (subject.toLowerCase() == 'literature') { %>
